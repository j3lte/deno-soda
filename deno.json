{
  "tasks": {
    "format": "deno fmt ./src/ ./test/",
    "lint": "deno lint ./src/ ./test/",
    "test": "deno test --coverage=.coverage",
    "coverage": "deno coverage .coverage --lcov --exclude=/test/,/scripts/ > ./.coverage/coverage.lcov",
    "test:watch": "deno test --watch",
    "clean": "rm -r ./coverage",
    "localTest": "deno run --allow-read --allow-write --allow-run ./scripts/runTest.ts"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 100,
      "singleQuote": false,
      "useTabs": false,
      "proseWrap": "preserve"
    },
    "files": {
      "exclude": [
        "./.coverage/**/*"
      ]
    }
  },
  "lint": {
    "rules": {
      "include": [
        "ban-untagged-todo",
        "explicit-function-return-type"
      ]
    },
    "files": {
      "exclude": [
        "./_local_testing.ts",
        "./.coverage/**/*"
      ]
    }
  },
  "test": {
    "files": {
      "exclude": [
        "./_local_testing.ts",
        "./.coverage/**/*",
        "./test/**/*"
      ]
    }
  }
}
